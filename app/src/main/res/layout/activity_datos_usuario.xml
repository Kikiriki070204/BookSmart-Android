<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".datos.DatosUsuarioActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/avatarIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/generic_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/avatarIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_settings"
                android:fontFamily="@font/league_spartan_light"
                android:textColor="@color/Borders"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/league_spartan"
                android:textColor="@color/Borders"
                android:textSize="16sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/book"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/UserData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settings"
        app:cardBackgroundColor="@color/CardBackground"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/nameSettings"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Borders"
                            android:textSize="20sp"
                            android:text="@string/nameData"/>

                        <TextView
                            android:id="@+id/nameData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            app:layout_constraintStart_toEndOf="@id/nameTitle"
                            android:layout_marginEnd="10dp"
                            android:gravity="end"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Btn2"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/nameTitle"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/apellidoSettings"
                        android:layout_width="match_parent"
                        android:layout_below="@id/nameSettings"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/apellidoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Borders"
                            android:textSize="20sp"
                            android:text="@string/lastnameData"/>

                        <TextView
                            android:id="@+id/apellidoData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            app:layout_constraintStart_toEndOf="@id/apellidoTitle"
                            android:layout_marginEnd="10dp"
                            android:gravity="end"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Btn2"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/apellidoTitle"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/emailSettings"
                        android:layout_width="match_parent"
                        android:layout_below="@id/apellidoSettings"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/emailTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/emailData"
                            android:textSize="20sp"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Borders" />

                        <TextView
                            android:id="@+id/emailData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintStart_toEndOf="@id/emailTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/emailTitle"
                            android:gravity="end"
                            android:textSize="20sp"
                            android:textColor="@color/Btn2"
                            android:fontFamily="@font/league_spartan" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/numeroSettings"
                        android:layout_width="match_parent"
                        android:layout_below="@id/emailSettings"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/numeroTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/numberData"
                            android:textSize="20sp"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Borders" />

                        <TextView
                            android:id="@+id/numeroData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintStart_toEndOf="@id/numeroTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/numeroTitle"
                            android:gravity="end"
                            android:textSize="20sp"
                            android:textColor="@color/Btn2"
                            android:fontFamily="@font/league_spartan" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/generoSettings"
                        android:layout_width="match_parent"
                        android:layout_below="@id/numeroSettings"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/generoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="10dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="@string/genderData"
                            android:textSize="20sp"
                            android:fontFamily="@font/league_spartan"
                            android:textColor="@color/Borders" />

                        <TextView
                            android:id="@+id/generoData"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintStart_toEndOf="@id/generoTitle"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/generoTitle"
                            android:gravity="end"
                            android:textSize="20sp"
                            android:textColor="@color/Btn2"
                            android:fontFamily="@font/league_spartan" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/UserData"
        app:cardBackgroundColor="@color/CardBackground"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/Btn2"
                    android:fontFamily="@font/league_spartan_semibold"
                    android:textSize="18sp"
                    android:text="@string/messageSettings"/>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/changePass"
                android:backgroundTint="@color/Btn1"
                app:cornerRadius="5dp"
                android:padding="15dp"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>