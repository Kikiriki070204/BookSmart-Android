<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/itemsBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prestamo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imagenLibro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- TÃ­tulo del libro -->
        <TextView
            android:id="@+id/tituloLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/league_spartan"
            android:textSize="20sp"
            android:textColor="@color/Borders"
            android:text="Libro"
            app:layout_constraintTop_toTopOf="@id/imagenLibro"
            app:layout_constraintStart_toEndOf="@id/imagenLibro" />

        <!-- View verde -->
        <View
            android:id="@+id/dueDaysGreen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/due_days_1"
            app:layout_constraintTop_toBottomOf="@id/tituloLibro"
            app:layout_constraintStart_toStartOf="@id/tituloLibro" />

        <!-- View gris -->
        <View
            android:id="@+id/dueDaysGray"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/due_days_2"
            app:layout_constraintTop_toBottomOf="@id/tituloLibro"
            app:layout_constraintStart_toEndOf="@id/dueDaysGreen" />

        <!-- TextView final -->
        <TextView
            android:id="@+id/progreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/3"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/league_spartan_medium"
            android:textColor="@color/Borders"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dueDaysGray"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>