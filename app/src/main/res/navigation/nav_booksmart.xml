<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_booksmart"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.booksmartapp.ui.home.HomeFragment"
        android:label="Inicio">
        <action
            android:id="@+id/actionHomeToDetalleFragment"
            app:destination="@id/detalleFragment" />
    </fragment>
    <fragment
        android:id="@+id/detalleFragment"
        android:name="com.example.booksmartapp.detail.PrestamoDetalleFragment"
        android:label="Detalle">
        <argument
            android:name="idPrestamo"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.booksmartapp.search.SearchFragment"
        android:label="Buscar" />
    <fragment
        android:id="@+id/datosFragment"
        android:name="com.example.booksmartapp.datos.DatosUsuarioFragment"
        android:label="Datos Usuario">

        <action
            android:id="@+id/actionDatosToCambiarPassword"
            app:destination="@id/cambiarPasswordFragment" />

    </fragment>
    <fragment
        android:id="@+id/cambiarPasswordFragment"
        android:name="com.example.booksmartapp.datos.CambiarPasswordFragment"
        android:label="Cambiar ContraseÃ±a" />
</navigation>